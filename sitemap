    <script>
        // Simple animation for the sitemap
        document.addEventListener('DOMContentLoaded', function() {
            const sections = document.querySelectorAll('.section');
            const footerPages = document.querySelectorAll('.footer-page');
            
            // Animate sections
            sections.forEach((section, index) => {
                setTimeout(() => {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, 200 * index);
            });
            
            // Animate footer pages
            footerPages.forEach((page, index) => {
                setTimeout(() => {
                    page.style.opacity = '1';
                    page.style.transform = 'translateY(0)';
                }, 1200 + 100 * index);
            });
            
            // Set initial state for animation
            sections.forEach(section => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                section.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            });
            
            footerPages.forEach(page => {
                page.style.opacity = '0';
                page.style.transform = 'translateY(20px)';
                page.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            });
            
            // Animate home page
            const homePage = document.querySelector('.home-page');
            homePage.style.opacity = '0';
            homePage.style.transform = 'scale(0.9)';
            homePage.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            
            setTimeout(() => {
                homePage.style.opacity = '1';
                homePage.style.transform = 'scale(1)';
            }, 100);
        });
    </script>
